{
  "name": "@govuk-react/monorepo",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:dist": "yarn build:es && rimraf dist && webpack -p packages/govuk-react/es/index.js --devtool source-map --output-filename index.js",
    "build:es": "lerna run build:es --parallel",
    "build:lib": "lerna run build:lib --parallel",
    "build:storybook": "cd packages/storybook && yarn build",
    "build:sync": "lerna run build",
    "build": "lerna run build --parallel",
    "bundlesize": "bundlesize",
    "clean:workspace": "rimraf packages/*/lib && rimraf packages/*/es && rimraf components/*/lib && rimraf components/*/es",
    "clean": "rimraf lib && rimraf es",
    "coverage": "yarn coverage:clean && yarn coverage:unit && yarn coverage:visual-regression && yarn coverage:merge && yarn coverage:merge-report",
    "coverage:clean": "rimraf coverage",
    "coverage:merge": "istanbul-merge --out coverage/merged/coverage-final.json ./coverage/unit/coverage-final.json  ./coverage/visual-regression/coverage-final.json",
    "coverage:merge-report": "nyc report --reporter=lcov --reporter=text --temp-dir=./coverage/merged --report-dir=./coverage/merged",
    "coverage:unit": "jest --watchAll=false --coverage --coverageDirectory=coverage/unit",
    "coverage:visual-regression": "jest --watchAll=false --coverage --coverageDirectory=coverage/visual-regression --roots=\"<rootDir>\" --testMatch=\"<rootDir>/storyshots/index.js\" --config=\"./jest.storyshots.config.js\"",
    "create-component": "node ./scripts/createComponent.js",
    "docs:components": "lerna run docs --parallel",
    "docs": "yarn docs:components && concat ./components/*/README.md -o './API.md'",
    "eslint:fix": "eslint --fix \"./{components,packages}/*/src/**/*.{js,ts,tsx}\"",
    "eslint": "eslint \"./{components,packages}/*/src/**/*.{js,ts,tsx}\"",
    "pack": "lerna exec --parallel -- npm pack",
    "start": "cd packages/storybook && npm start",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:snapshot": "yarn test:unit -u",
    "test:unit": "jest",
    "test": "cross-env CI=true yarn test:unit --coverage && yarn eslint",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --ignore @govuk-react/images --parallel -- babel src -x .js,jsx,.ts,.tsx -d es -w --source-maps",
    "watch:lib": "lerna exec --ignore @govuk-react/images --parallel -- babel src -x .js,jsx,.ts,.tsx -d lib -w --source-maps",
    "watch": "yarn watch:lib"
  },
  "description": "A port of the govuk-frontend components for React using styled-components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/node": "7.14.2",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-transform-runtime": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@storybook/addon-actions": "6.3.5",
    "@storybook/addon-docs": "6.3.5",
    "@storybook/addon-knobs": "6.3.0",
    "@storybook/addon-storyshots": "6.3.5",
    "@storybook/addons": "6.3.5",
    "@storybook/react": "6.3.5",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-styled-components": "^1.12.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "bundlesize": "^0.18.1",
    "can-npm-publish": "1.3.3",
    "chalk": "^4.1.1",
    "codacy-coverage": "^3.0.0",
    "concat": "^1.0.3",
    "core-js": "^3.0.1",
    "cross-env": "^5.1.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-sonar": "0.0.8",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "final-form": "^4.12.0",
    "istanbul-merge": "^1.1.1",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.4",
    "jest-transform-stub": "^2.0.0",
    "lerna": "2.11",
    "mkdirp-promise": "^5.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "prop-types": "^15.6.0",
    "react": "^16.8.4",
    "react-docgen": "^3.0.0",
    "react-dom": "^16.8.4",
    "react-final-form": "^6.5.3",
    "react-router-dom": "^5.2.0",
    "react-use-media": "^0.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^10.0.0",
    "styled-components": "^5.3.0",
    "typescript": "^4.2.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "workspace-alias": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-react/govuk-react.git"
  },
  "author": "Alasdair McLeay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-react/govuk-react/issues"
  },
  "homepage": "https://github.com/govuk-react/govuk-react#readme",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "120 kB"
    }
  ],
  "nyc": {
    "report-dir": "coverage/unit",
    "reporter": ["text", "json", "lcov"],
    "all": true,
    "branches": 95,
    "functions": 90,
    "lines": 95,
    "statements": 95,
    "watermarks": {
      "branches": [90, 95],
      "functions": [90, 90],
      "lines": [90, 95],
      "statements": [85, 95]
    }
  },
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
