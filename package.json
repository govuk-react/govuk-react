{
  "name": "@govuk-react/monorepo",
  "scripts": {
    "start": "cd packages/storybook && npm start",
    "bootstrap": "lerna bootstrap",
    "docs": "./packages/api-docs/bin/doc-component.js './components/**/lib/index.js' './API.md'",
    "docs:components": "lerna run docs --parallel",
    "eslint": "eslint ./{components,packages}/*/src/**/*.js",
    "eslint:fix": "eslint --fix ./{components,packages}/*/src/**/*.js",
    "build": "lerna run build --parallel",
    "build:sync": "lerna run build",
    "build:lib": "lerna run build:lib --parallel",
    "build:es": "lerna run build:es --parallel",
    "build:dist": "npm run build:es && rimraf dist && webpack -p packages/govuk-react/es/index.js --output-filename dist/index.js",
    "pack": "lerna exec --parallel -- npm pack",
    "watch": "npm run watch:lib",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --ignore @govuk-react/images --parallel -- babel src -d es -w --source-maps",
    "watch:lib": "lerna exec --ignore @govuk-react/images --parallel -- babel src -d lib -w --source-maps",
    "clean": "rimraf lib && rimraf es",
    "flow": "flow",
    "bundlesize": "bundlesize",
    "test": "cross-env CI=true npm run test:unit && npm run eslint && npm run flow",
    "test:unit": "jest --env=jsdom",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --env=jsdom",
    "test:snapshot": "npm run test:unit -- -u",
    "create-component": "node ./scripts/createComponent.js",
    "chromatic-test": "cd packages/storybook && npm run chromatic-test"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/{components,packages}/*/src/**.js",
      "!<rootDir>/{components,packages}/*/src/**/{stories,example,fixtures}.js",
      "!<rootDir>/packages/storybook/**",
      "!<rootDir>/packages/api-docs/**",
      "!<rootDir>/packages/storybook-components/**"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTests.js",
    "testMatch": [
      "<rootDir>/{components,packages}/*/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "jest-glamor-react",
      "enzyme-to-json/serializer"
    ]
  },
  "description": "A port of the govuk-frontend components for React using styled-components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.0.3"
  },
  "peerDependencies": {
    "glamorous": ">=4",
    "prop-types": ">=15",
    "react": ">=15"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-1": "^7.0.0-beta.40",
    "@govuk-react/back-link": "*",
    "@govuk-react/breadcrumb": "*",
    "@govuk-react/button": "*",
    "@govuk-react/checkbox": "*",
    "@govuk-react/date-input": "*",
    "@govuk-react/error-text": "*",
    "@govuk-react/file-upload": "*",
    "@govuk-react/grid-col": "*",
    "@govuk-react/grid-row": "*",
    "@govuk-react/header": "*",
    "@govuk-react/hint-text": "*",
    "@govuk-react/images": "*",
    "@govuk-react/input-field": "*",
    "@govuk-react/input": "*",
    "@govuk-react/label-text": "*",
    "@govuk-react/label": "*",
    "@govuk-react/layout": "*",
    "@govuk-react/list-item": "*",
    "@govuk-react/list-navigation": "*",
    "@govuk-react/multi-choice": "*",
    "@govuk-react/ordered-list": "*",
    "@govuk-react/pagination": "*",
    "@govuk-react/panel": "*",
    "@govuk-react/phase-badge": "*",
    "@govuk-react/phase-banner": "*",
    "@govuk-react/radio": "*",
    "@govuk-react/related-items": "*",
    "@govuk-react/search-box": "*",
    "@govuk-react/select": "*",
    "@govuk-react/storybook-components": "*",
    "@govuk-react/text-area": "*",
    "@govuk-react/table": "*",
    "@govuk-react/unordered-list": "*",
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-knobs": "^3.4.1",
    "@storybook/addons": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-remove-prop-types": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "bundlesize": "^0.17.0",
    "can-npm-publish": "1.1.0",
    "chalk": "^2.3.1",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-sonar": "0.0.6",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "final-form": "^4.2.0",
    "flow-bin": "^0.70.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.2",
    "jest": "^22.1.2",
    "jest-glamor-react": "^3.3.0",
    "lerna": "2",
    "mkdirp-promise": "^5.0.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-docgen": "^3.0.0-beta11",
    "react-dom": "^16.2.0",
    "react-final-form": "^3.1.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "webpack": "^3.10.0",
    "webpack-cli": "^2.0.12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penx/govuk-react.git"
  },
  "author": "Alasdair McLeay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/penx/govuk-react/issues"
  },
  "homepage": "https://github.com/penx/govuk-react#readme",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "120 kB"
    }
  ],
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
