{
  "name": "govuk-react",
  "version": "0.1.18",
  "scripts": {
    "start": "cd packages/storybook && npm start",
    "build-storybook": "npm run bootstrap && npm run build && cd packages/storybook && npm run build-storybook && cp -r storybook-static ../..",
    "bootstrap": "lerna bootstrap",
    "docs": "doc-component '../../../components/**/lib/index.js' './API.md'",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "build": "lerna run build --parallel",
    "build:lib": "lerna run build:lib --parallel",
    "build:es": "lerna run build:es --parallel",
    "build:dist": "npm run build:es && webpack -p packages/govuk-react/es/index.js dist/index.js",
    "watch": "npm run watch:lib",
    "watch:es": "cross-env BABEL_ENV=es lerna exec --ignore @govuk-react/images --parallel -- babel src -d es -w --source-maps",
    "watch:lib": "lerna exec --ignore @govuk-react/images --parallel -- babel src -d lib -w --source-maps",
    "clean": "rimraf lib && rimraf es",
    "flow": "flow",
    "bundlesize": "bundlesize",
    "test": "cross-env CI=true npm run test:unit && npm run eslint && npm run flow",
    "test:unit": "jest --env=jsdom",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --env=jsdom",
    "test:snapshot": "npm run test:unit -- -u",
    "create-component": "node ./scripts/createComponent.js"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/{components,packages}/*/src/**/*.js",
      "!<rootDir>/{components,packages}/*/src/**/{stories,example}.js",
      "!<rootDir>/packages/storybook/**",
      "!<rootDir>/packages/api-docs/**",
      "!<rootDir>/packages/storybook-components/**"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTests.js",
    "testMatch": [
      "<rootDir>/{components,packages}/*/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "jest-glamor-react",
      "enzyme-to-json/serializer"
    ]
  },
  "description": "A port of the govuk-frontend components for React using styled-components.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "dependencies": {
    "govuk-colours": "^1.0.3"
  },
  "peerDependencies": {
    "glamorous": ">=4",
    "prop-types": ">=15",
    "react": ">=15"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-1": "^7.0.0-beta.40",
    "@govuk-react/api-docs": "0.1.19",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-remove-prop-types": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "bundlesize": "^0.16.0",
    "chalk": "^2.3.1",
    "component-image": "^2.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-sonar": "0.0.6",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "final-form": "^4.2.0",
    "flow-bin": "^0.66.0",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.2",
    "jest": "^22.1.2",
    "jest-glamor-react": "^3.3.0",
    "jimp": "^0.2.28",
    "lerna": "2",
    "mkdirp-promise": "^5.0.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-docgen": "^3.0.0-beta11",
    "react-dom": "^16.2.0",
    "react-final-form": "^3.1.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "render-glamorous": "0.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.2.1",
    "webpack": "^3.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penx/govuk-react.git"
  },
  "author": "Alasdair McLeay",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/penx/govuk-react/issues"
  },
  "homepage": "https://github.com/penx/govuk-react#readme",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "120 kB"
    }
  ],
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "private": true
}
