{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@govuk-react/*": [ "./components/*/src/index.tsx", "./packages/*/src/index.tsx" ],
      "govuk-react": ["./packages/govuk-react/src/index.ts"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "./scripts/setupTests.ts",
    "./components/*/src/**/*",
    "./packages/*/src/**/*"
  ]
}
